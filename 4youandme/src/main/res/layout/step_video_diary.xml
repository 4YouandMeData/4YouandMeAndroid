<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.camera.view.CameraView
        android:id="@+id/camera"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:pinchToZoomEnabled="false"
        tools:visibility="gone" />

    <VideoView
        android:id="@+id/video_view"
        style="@style/text_paragraph"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/flash_toggle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        style="@style/text_h2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="0:00/2:00" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/camera_toggle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/title" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/recording_pause"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@id/record_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/record_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/close_recording"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toEndOf="@id/review"
            app:layout_constraintTop_toTopOf="@id/recording_title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/recording_title"
            style="@style/text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@id/recording_time_image"
            app:layout_constraintEnd_toStartOf="@id/close_recording"
            app:layout_constraintStart_toStartOf="@id/review"
            tools:text="@string/PLACEHOLDER_title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/recording_time"
            style="@style/text_paragraph"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@id/recording_time_image"
            app:layout_constraintEnd_toEndOf="@id/review"
            app:layout_constraintStart_toEndOf="@id/recording_time_image"
            app:layout_constraintTop_toTopOf="@id/recording_time_image"
            tools:text="00:00/2:00" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/recording_time_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@id/recording_progress"
            app:layout_constraintStart_toStartOf="@id/review" />

        <ProgressBar
            android:id="@+id/recording_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@id/recording_info_title"
            app:layout_constraintEnd_toEndOf="@id/review"
            app:layout_constraintStart_toStartOf="@id/review" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/recording_info_title"
            style="@style/text_paragraph"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@id/recording_info_body"
            app:layout_constraintEnd_toEndOf="@id/review"
            app:layout_constraintStart_toStartOf="@id/review"
            tools:text="@string/PLACEHOLDER_title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/recording_info_body"
            style="@style/text_paragraph"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@id/review"
            app:layout_constraintEnd_toEndOf="@id/review"
            app:layout_constraintStart_toStartOf="@id/review"
            tools:text="@string/PLACEHOLDER_body" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/review"
            style="@style/text_h2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Review Recording" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/review_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/close_review"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toEndOf="@id/submit"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/review_time"
            style="@style/text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@id/submit"
            app:layout_constraintEnd_toEndOf="@id/submit"
            app:layout_constraintStart_toStartOf="@id/submit"
            app:layout_constraintTop_toBottomOf="@id/close_review"
            tools:text="00:12/2:00"
            tools:visibility="gone" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit"
            style="@style/text_h2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Review Recording" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <org.fouryouandme.core.arch.loading.LoadingView
        android:id="@+id/loading"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>