<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wearable_navigation"
    app:startDestination="@id/wearable_welcome">


    <fragment
        android:id="@+id/wearable_welcome"
        android:name="org.fouryouandme.auth.wearable.welcome.WearableWelcomeFragment"
        android:label="wearable_welcome"
        tools:layout="@layout/wearable_welcome">

        <action
            android:id="@+id/action_wearable_welcome_to_wearable_page"
            app:destination="@id/wearable_page"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right">

            <argument
                android:name="id"
                app:argType="string" />

        </action>

        <action
            android:id="@+id/action_wearable_welcome_to_wearable_login"
            app:destination="@id/wearable_login"
            app:enterAnim="@anim/slide_from_top"
            app:exitAnim="@anim/idle"
            app:popEnterAnim="@anim/idle"
            app:popExitAnim="@anim/slide_to_top">

            <argument
                android:name="url"
                app:argType="string" />

            <argument
                android:name="next_page"
                app:argType="string"
                app:nullable="true" />

        </action>

    </fragment>

    <fragment
        android:id="@+id/wearable_page"
        android:name="org.fouryouandme.auth.wearable.page.WearablePageFragment"
        android:label="wearable_page"
        tools:layout="@layout/wearable_page">

        <argument
            android:name="id"
            app:argType="string" />

        <action
            android:id="@+id/action_wearable_page_self"
            app:destination="@id/wearable_page"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right">

            <argument
                android:name="id"
                app:argType="string" />

        </action>

        <action
            android:id="@+id/action_wearable_page_to_wearable_login"
            app:destination="@id/wearable_login"
            app:enterAnim="@anim/slide_from_top"
            app:exitAnim="@anim/idle"
            app:popEnterAnim="@anim/idle"
            app:popExitAnim="@anim/slide_to_top">

            <argument
                android:name="url"
                app:argType="string" />

            <argument
                android:name="next_page"
                app:argType="string"
                app:nullable="true" />

        </action>


    </fragment>

    <fragment
        android:id="@+id/wearable_login"
        android:name="org.fouryouandme.auth.wearable.login.WearableLoginFragment"
        android:label="wearable_login"
        tools:layout="@layout/wearable_login">

        <argument
            android:name="url"
            app:argType="string" />

        <argument
            android:name="next_page"
            app:argType="string"
            app:nullable="true" />

        <action
            android:id="@+id/action_wearable_login_to_wearable_page"
            app:destination="@id/wearable_page"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right"
            app:popUpTo="@id/wearable_login"
            app:popUpToInclusive="true">

            <argument
                android:name="id"
                app:argType="string" />

        </action>


    </fragment>

</navigation>