<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about_you_navigation"
    app:startDestination="@id/about_you_menu">

    <fragment
        android:id="@+id/about_you_menu"
        android:name="org.fouryouandme.aboutyou.menu.AboutYouMenuFragment"
        android:label="about_you_menu"
        tools:layout="@layout/about_you_menu">

        <action
            android:id="@+id/action_about_you_menu_to_about_you_review_consent"
            app:destination="@id/about_you_review_consent"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right" />

        <action
            android:id="@+id/action_about_you_menu_to_about_you_apps_and_devices"
            app:destination="@id/about_you_apps_and_devices"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right" />

    </fragment>

    <fragment
        android:id="@+id/about_you_review_consent"
        android:name="org.fouryouandme.aboutyou.review.AboutYouReviewConsentFragment"
        android:label="AboutYouReviewConsentFragment"
        tools:layout="@layout/about_you_review_consent" />

    <fragment
        android:id="@+id/about_you_apps_and_devices"
        android:name="org.fouryouandme.aboutyou.appsanddevices.AboutYouAppsAndDevicesFragment"
        android:label="AboutYouAppsAndDevicesFragment"
        tools:layout="@layout/apps_and_devices">
        <action
            android:id="@+id/action_about_you_apps_and_devices_to_integration_login"
            app:destination="@id/integration_login"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right" />

    </fragment>

    <fragment
        android:id="@+id/integration_login"
        android:name="org.fouryouandme.auth.integration.login.IntegrationLoginFragment"
        android:label="integration_login"
        tools:layout="@layout/integration_login">

        <argument
            android:name="url"
            app:argType="string" />

        <argument
            android:name="next_page"
            app:argType="string"
            app:nullable="true" />
    </fragment>

</navigation>