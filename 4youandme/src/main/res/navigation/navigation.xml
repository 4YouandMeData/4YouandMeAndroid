<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/consent">

    <action
        android:id="@+id/action_global_splash"
        app:destination="@id/splash"
        app:enterAnim="@anim/slide_from_right"
        app:exitAnim="@anim/slide_to_left"
        app:popEnterAnim="@anim/slide_from_left"
        app:popExitAnim="@anim/slide_to_right"
        app:popUpTo="@id/navigation" />

    <action
        android:id="@+id/action_global_welcome"
        app:destination="@id/welcome"
        app:enterAnim="@anim/slide_from_right"
        app:exitAnim="@anim/slide_to_left"
        app:popEnterAnim="@anim/slide_from_left"
        app:popExitAnim="@anim/slide_to_right"
        app:popUpTo="@id/navigation" />

    <action
        android:id="@+id/action_global_web"
        app:destination="@id/web"
        app:enterAnim="@anim/slide_from_top"
        app:exitAnim="@anim/idle"
        app:popEnterAnim="@anim/idle"
        app:popExitAnim="@anim/slide_to_top">

        <argument
            android:name="url"
            app:argType="string"
            app:nullable="true" />

    </action>

    <fragment
        android:id="@+id/web"
        android:name="org.fouryouandme.web.WebFragment"
        android:label="web"
        tools:layout="@layout/web">

        <argument
            android:name="url"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/splash"
        android:name="org.fouryouandme.auth.splash.SplashFragment"
        android:label="splash"
        tools:layout="@layout/splash">

        <action
            android:id="@+id/action_splash_to_welcome"
            app:destination="@id/welcome"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right"
            app:popUpTo="@id/navigation" />

    </fragment>


    <fragment
        android:id="@+id/welcome"
        android:name="org.fouryouandme.auth.welcome.WelcomeFragment"
        android:label="welcome"
        tools:layout="@layout/welcome">

        <action
            android:id="@+id/action_welcome_to_sign_up_info"
            app:destination="@id/sign_up_info"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right" />

    </fragment>

    <fragment
        android:id="@+id/sign_up_info"
        android:name="org.fouryouandme.auth.signup.info.SignUpInfoFragment"
        android:label="sign_up_info"
        tools:layout="@layout/sign_up_info">

        <action
            android:id="@+id/action_sign_up_info_to_sign_up_later"
            app:destination="@id/sign_up_later"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right"
            app:popUpTo="@id/welcome" />

        <action
            android:id="@+id/action_sign_up_info_to_enter_phone"
            app:destination="@id/enter_phone"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right" />

    </fragment>

    <fragment
        android:id="@+id/sign_up_later"
        android:name="org.fouryouandme.auth.signup.later.SignUpLaterFragment"
        android:label="sign_up_later"
        tools:layout="@layout/sign_up_later" />

    <fragment
        android:id="@+id/enter_phone"
        android:name="org.fouryouandme.auth.phone.EnterPhoneFragment"
        android:label="enter_phone"
        tools:layout="@layout/enter_phone">

        <action
            android:id="@+id/action_enter_phone_to_phone_validation_code"
            app:destination="@id/phone_validation_code"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right">

            <argument
                android:name="phone"
                app:argType="string"
                app:nullable="false" />

            <argument
                android:name="countryCode"
                app:argType="string"
                app:nullable="false" />

        </action>

    </fragment>

    <fragment
        android:id="@+id/phone_validation_code"
        android:name="org.fouryouandme.auth.phone.code.PhoneValidationCodeFragment"
        android:label="phone_validation_code"
        tools:layout="@layout/phone_validation_code">

        <argument
            android:name="phone"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="countryCode"
            app:argType="string"
            app:nullable="false" />

        <action
            android:id="@+id/action_phone_validation_code_to_screening"
            app:destination="@id/screening"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right" />


    </fragment>

    <fragment
        android:id="@+id/screening"
        android:name="org.fouryouandme.auth.screening.ScreeningFragment"
        android:label="screening"
        tools:layout="@layout/screening">

        <action
            android:id="@+id/action_screening_to_consent"
            app:destination="@id/consent"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right" />

    </fragment>

    <fragment
        android:id="@+id/consent"
        android:name="org.fouryouandme.auth.consent.ConsentFragment"
        android:label="screening"
        tools:layout="@layout/consent" />

</navigation>